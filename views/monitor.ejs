<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/socket.io/socket.io.js"></script>
    <!--
      <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    -->
  </head>
  <body>
    <canvas id='canvas1' style="position: absolute; top:0; left:0;"></canvas>
    <div id="chat-window">
      <div class="title">Message</div>
      <div class="content-message">
<% for (var i=0 ; i < 20; i++ ) { %>
        <div class="message">
          <span class="who">Admin: </span>
          <span class="message"> hello world.</span>
        </div>
<% } %>

      </div>
      <form action="/talk" method="post">
        <input type="text" name="message" placeholder="input message here...">
        <input type="submit" name="submit" value="submit">
      </form>
    </div>
    <script src="/javascripts/io.client.js"></script>
  </body>
</html>
